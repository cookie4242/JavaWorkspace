
public class func4
{

	public static void main(String[] args)
	
		{		
			int side = 1;						
			System.out.print("A triangle with a base of " + side + " a height of" + "has an area of " + areaOfSquare(side));	
				
		}	
				  
				
		public static float areaOfSquare(int x) 

		{		
			float area = .5f * x;		
			return area;
			

	}

}
